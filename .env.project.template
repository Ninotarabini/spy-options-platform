# ============================================
# SPY OPTIONS PLATFORM - CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .env.project and fill with your values

# ----------------
# GITHUB
# ----------------
GITHUB_USERNAME=<your-github-username>
GITHUB_REPO_NAME=<your-repo-name>
GITHUB_REPO_URL=https://github.com/<username>/<repo>
GITHUB_PAGES_URL=https://<username>.github.io/<repo>

# ----------------
# LOCAL WORKSPACE
# ----------------
LOCAL_REPO_PATH=<path-to-your-local-repo>

# ----------------
# SSH & UBUNTU REMOTE
# ----------------
SSH_HOST=<your-server-ip>
SSH_USER=<your-ssh-user>
SSH_PORT=22
SSH_HOSTNAME=<your-hostname>
PROJECT_PATH_REMOTE=/home/<user>/spy-options-platform
K8S_NAMESPACE=spy-options-bot

# ----------------
# AZURE CLOUD
# ----------------
AZURE_SUBSCRIPTION_ID=<your-subscription-id>
AZURE_TENANT_ID=<your-tenant-id>
AZURE_EMAIL=<your-azure-email>
AZURE_REGION=westeurope

# Azure Resources (to be completed in Phase 1)
RESOURCE_GROUP_NAME=rg-spy-options-prod
ACR_NAME=<unique-acr-name>
ACR_LOGIN_SERVER=<acr-name>.azurecr.io
VNET_NAME=vnet-spy-options

# ----------------
# INTERACTIVE BROKERS (to be completed in Phase 9)
# ----------------
IBKR_USERNAME=<your-ibkr-username>
IBKR_ACCOUNT_ID=<your-account-id>
IBKR_CLIENT_ID=1

# ----------------
# NOTIFICATIONS
# ----------------
NOTIFICATION_EMAIL=<your-email>
TELEGRAM_BOT_TOKEN=<optional-telegram-token>
